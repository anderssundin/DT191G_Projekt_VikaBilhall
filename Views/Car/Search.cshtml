@model IEnumerable<Projekt.Models.CarModel>

@{
    ViewData["Title"] = "Sök bil";
}

<h1>Bilsök</h1>

<form method="post" class="form-inline">
    <div class="form-group mb-2">
        <label for="searchParam" class="sr-only">Sök modell</label>
        <input type="text" class="form-control" id="searchParam" name="searchParam" placeholder="Sök på modellnamn">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Sök</button>
</form>

<table class="table">
   <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gearbox)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fuel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Milage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakeModel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gearbox)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Milage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img style="width: 200px;" src="/images/@Html.DisplayFor(modelItem => item.ImageName)">
                </td>
                <td>
                    @if (item.MakeModel != null)
                    {
                        @Html.DisplayFor(modelItem => item.MakeModel.MakeOfModel)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>